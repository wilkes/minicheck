#!/bin/sh
export HERE=`pwd`

if [ -d $HERE/lib ]; then
    for file in $HERE/lib/*.jar; do
        JARS=$JARS:$file
    done
fi

if [ -d $HERE/src ]; then
    JARS=$JARS:src
fi

if [ -d $HERE/test ]; then
    JARS=$JARS:test
fi

if [ -z `which rlwrap` ]; then
    RLWRAP=""
else
    RLWRAP="rlwrap"
fi

if [ -z "$1" ]; then
    $RLWRAP java -cp $JARS clojure.main
else
    $RLWRAP java -cp $JARS clojure.main $1
fi

